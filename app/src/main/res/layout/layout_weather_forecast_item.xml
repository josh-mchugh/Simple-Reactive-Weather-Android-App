<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.pwittchen.weathericonview.WeatherIconView
        android:id="@+id/weather_forecast_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:weatherIconColor="@android:color/black"
        app:weatherIconSize="100" />

    <TextView
        android:id="@+id/max_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_temp"
        app:layout_constraintLeft_toRightOf="@id/weather_forecast_item_icon"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/weather_forecast_item_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="999"
        app:layout_constraintLeft_toRightOf="@id/weather_forecast_item_icon"
        app:layout_constraintTop_toBottomOf="@id/max_temp_label"
        />

    <TextView
        android:id="@+id/min_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_temp"
        app:layout_constraintLeft_toRightOf="@id/weather_forecast_item_icon"
        app:layout_constraintTop_toBottomOf="@id/weather_forecast_item_max_temp"
        />

    <TextView
        android:id="@+id/weather_forecast_item_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="999"
        app:layout_constraintLeft_toRightOf="@id/weather_forecast_item_icon"
        app:layout_constraintTop_toBottomOf="@id/min_temp_label"
        />



</android.support.constraint.ConstraintLayout>